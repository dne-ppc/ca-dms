# CA-DMS Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://ca_dms_user:your_secure_postgres_password@postgres:5432/ca_dms

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis:6379/0

# Backend API Configuration
SECRET_KEY=your-super-secret-key-minimum-32-characters-long
API_V1_STR=/api/v1
PROJECT_NAME=CA-DMS

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://your-domain.com"]

# Supabase Configuration (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Docker Registry (for CI/CD)
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Production URLs
PRODUCTION_FRONTEND_URL=https://your-domain.com
PRODUCTION_BACKEND_URL=https://api.your-domain.com

# SSL Certificate paths (for production nginx)
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/private.key